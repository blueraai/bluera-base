# SimpleCov configuration
# Add to spec/spec_helper.rb or test/test_helper.rb:
#   require 'simplecov'
#   SimpleCov.start

SimpleCov.start do
  minimum_coverage {{THRESHOLD}}
  minimum_coverage_by_file 70

  add_filter '/spec/'
  add_filter '/test/'
  add_filter '/config/'
  add_filter '/vendor/'

  add_group 'Models', 'app/models'
  add_group 'Controllers', 'app/controllers'
  add_group 'Libraries', 'lib'
end
