# EditorConfig - https://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Shell scripts
[*.sh]
indent_size = 2

# Markdown preserves trailing whitespace for line breaks
[*.md]
trim_trailing_whitespace = false

# JSON
[*.json]
indent_size = 2
