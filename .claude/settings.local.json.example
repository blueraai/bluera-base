{
  "permissions": {
    "allow": [
      "Bash(jq *)",
      "Bash(git rev-parse *)",
      "Bash(git status *)",
      "Bash(git diff *)",
      "Bash(git ls-files *)",
      "Bash(git log *)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(git fetch *)",
      "Bash(git describe *)",
      "Bash(gh run *)",
      "Bash(gh release *)",
      "Bash(shellcheck *)",
      "Bash(osascript *)",
      "Bash(notify-send *)",
      "Bash(npm run *)",
      "Bash(npm test *)",
      "Bash(yarn run *)",
      "Bash(pnpm run *)",
      "Bash(bun run *)",
      "Bash(bun x *)",
      "Bash(npx *)",
      "Bash(cargo check *)",
      "Bash(cargo clippy *)",
      "Bash(go vet *)",
      "Bash(ruff check *)",
      "Bash(flake8 *)",
      "Bash(mypy *)",
      "Bash(eslint *)",
      "Bash(tsc --noEmit *)",
      "Bash(rustfmt *)",
      "Bash(gofmt *)",
      "Bash(golangci-lint run *)",
      "Bash(jscpd *)"
    ],
    "deny": [
      "Bash(* --no-verify *)",
      "Bash(git push --force *)",
      "Bash(rm -rf /)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR/.claude/hooks/post-edit-check.sh\"",
            "statusMessage": "Validating changes..."
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt|idle_prompt|elicitation_dialog",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Claude needs your input\" with title \"Claude Code\" sound name \"Glass\"' 2>/dev/null || true"
          }
        ]
      }
    ]
  }
}
